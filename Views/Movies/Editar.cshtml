@model Pelicula


<div class="text-center">
    <h1 class="display-5">Editar</h1>
</div>

<div>
<table class="table table-dark table-striped">
  <thead class="text-left">
    <tr>
      <th scope="col">Película</th>
    </tr>
  </thead>
  <tbody>
        <tr>
            <td>@Model.Nombre</td>
        </tr>
        <tr>
            <td>Puesto: <button class="btn btn-success">@Model.Código</button></td>
        </tr>
        <tr>
            <td>Dirigida por: @Model.Direccion</td>
        </tr>    
        <tr>
            <td>Género: @Model.Género</td>
        </tr>
        <tr>
            <td>@Model.Duración minutos.</td>
        </tr>
        <tr>
            <td>@Model.Puntuación /10 ☆.</td>
        </tr>
</tbody>
</table>
    <div class="text-center">
        <button class="btn btn-primary">Guardar Datos</button>
        <a class="btn btn-primary" asp-area="" asp-controller="Movies" asp-action="Index">Volver</a>
    </div>


